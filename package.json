{
  "name": "about-me-simon-lamb",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://slamb2k.github.io",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js",
    "build:analyze": "vite build --mode analyze",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:accessibility": "vitest run --testNamePattern=\"accessibility|a11y\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lhci autorun --config=.lighthouserc.desktop.js",
    "bundle:analyze": "npx vite-bundle-analyzer dist/stats.json",
    "performance:check": "npm run build && npm run lighthouse",
    "prepare": "husky",
    "generate:component": "node scripts/generate-component.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "100kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/index.html",
      "maxSize": "10kb",
      "compression": "gzip"
    }
  ],
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
